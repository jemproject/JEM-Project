<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            inputmode="search"
            label="COM_JEM_SEARCH"
            hint="COM_JEM_SEARCH"
        />

        <field
            name="type"
            type="list"
            label="COM_JEM_FILTER_TYPE"
            class="js-select-submit-on-change"
            default="7"
            validate="options"
        >
            <option value="1">COM_JEM_EVENT_TITLE</option>
            <option value="2">COM_JEM_VENUE</option>
            <option value="3">COM_JEM_CITY</option>
            <option value="4">COM_JEM_CATEGORY</option>
            <option value="5">COM_JEM_STATE</option>
            <option value="6">COM_JEM_COUNTRY</option>
            <option value="7">JALL</option>
        </field>

        <field
            name="begin"
            type="calendar"
            label="COM_JEM_EVENTS_FILTER_STARTDATE"
            hint="COM_JEM_EVENTS_FILTER_STARTDATE"
            class="js-select-submit-on-change"
            format="%Y-%m-%d"
        />

        <field
            name="end"
            type="calendar"
            label="COM_JEM_EVENTS_FILTER_ENDDATE"
            hint="COM_JEM_EVENTS_FILTER_ENDDATE"
            class="js-select-submit-on-change"
            format="%Y-%m-%d"
        />

        <field
            name="state"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            class="js-select-submit-on-change"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="JOPTION_SELECT_ACCESS"
            class="js-select-submit-on-change"
        >
            <option value="">JOPTION_SELECT_ACCESS</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            class="js-select-submit-on-change"
            default="a.id DESC"
            validate="options"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
            <option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
            <option value="a.dates ASC">COM_JEM_DATE_ASC</option>
            <option value="a.dates DESC">COM_JEM_DATE_DESC</option>
            <option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
            <option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            default="25"
            class="js-select-submit-on-change"
        />
    </fields>
</form>