			   label="COM_JEM_STARTDATE"
			   description="COM_JEM_STARTDATE"
			   class="inputbox"
			   size="22"
			   format="%Y-%m-%d"
			   translateformat="true"
			   filter="string"
			   showtime="false"
		/>
		<field name="enddates" type="calendarjem"
			   label="COM_JEM_ENDDATE"
			   description="COM_JEM_ENDDATE"
			   class="inputbox"
			   size="22"
			   format="%Y-%m-%d"
			   translateformat="true"
			   filter="string"
			   showtime="false"
