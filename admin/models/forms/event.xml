			   label="COM_JEM_ALIAS"
			   description="COM_JEM_ALIAS"
			   required="false"
               hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
		<field name="datdescription" type="editor"
			   hide="pagebreak,readmore"
			   class="inputbox"
			   rows="3" cols="40"
