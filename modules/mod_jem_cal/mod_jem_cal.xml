					default=""
					label="MOD_JEM_CAL_MODULE_CLASS_SUFFIX"
					description="MOD_JEM_CAL_MODULE_CLASS_SUFFIX_DESC"
				/>
				<field name="FixItemID" type="text"
					default=""
					label="MOD_JEM_CAL_DEFAULT_ITEM_ID"
					description="MOD_JEM_CAL_DEFAULT_ITEM_ID_DESC"
				/>
