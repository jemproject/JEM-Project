  <version>1.1beta3.2.3-6</version>
  <description>EVENTLIST COMMENTS PLUGIN DESC</description>
  
	<files>
		<filename plugin="comments">comments.php</filename>
	</files>
    
	<languages>
		<language tag="en-GB">languages/en-GB.plg_eventlist_comments.ini</language>
	</languages>
  <config>
	<fields name="params">
	<fieldset name="basic">
    <field type="list" name="commentsystem" label="COMMENTSYSTEM" default="0" description="COMMENTSYSTEM DESC">
    	<option value="0">NONE</option>
		<option value="1">JOMCOMMENTS</option>
		<option value="2">JCOMMENTS</option>
		<option value="3">JXTENDED COMMENTS</option>
	</field>
		</fieldset>
	</fields>
   </config>
</extension>