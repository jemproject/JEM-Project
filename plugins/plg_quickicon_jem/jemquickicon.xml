<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="quickicon" method="upgrade">
    <name>Quick Icon - JEM</name>
    <creationDate>April 2024</creationDate>
    <author>JEM Community</author>
    <authorEmail>info@joomlaeventmanager.net</authorEmail>
    <authorUrl>https://www.joomlaeventmanager.net</authorUrl>
    <copyright>copyright (C) 2013-2024 joomlaeventmanager.net</copyright>
    <license>https://www.gnu.org/licenses/gpl-3.0 GNU/GPL</license>
    <version>4.2.1</version>
    <description>JEM Quick Icon</description>

    <files>
        <filename plugin="jemquickicon">jemquickicon.php</filename>
        <filename>index.html</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="text" name="context"
                       default="jem_quickicon"
                       description="Quick icon to JEM menu in backend."
                       label="Group"
                />
                <field type="text" name="jem_quickicon"
                       default=""
                       description="Joomla Event Manager"
                       label="Icon legend"
                />
            </fieldset>
        </fields>
    </config>
</extension>
