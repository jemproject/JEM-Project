<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>Eventlist - Search</name>
	<author>Christoph Lukes</author>
	<creationDate>11 April 2011</creationDate>
	<copyright>(C) 2005 - 2009 Christoph Lukes</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@schlu.net</authorEmail>
	<authorUrl>http://www.schlu.net</authorUrl>
	<version>2.0.0.1</version>
	<description>Search Plugin for the EventList Component</description>

	<files>
		<filename plugin="eventlist">eventlist.php</filename>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB.plg_search_eventlist.ini</language>
		<language tag="de-DE">languages/de-DE.plg_search_eventlist.ini</language>
    	<language tag="fr-FR">languages/fr-FR.plg_search_eventlist.ini</language>
	</languages>

	<config>
	<fields name="params">
	<fieldset name="basic">
		<field name="search_limit" type="text" size="5" default="50" label="SEARCH LIMIT" description="NUMBER ITEMS RETURN"/>
	
	
	</fieldset>
	</fields>
   </config>
</extension>