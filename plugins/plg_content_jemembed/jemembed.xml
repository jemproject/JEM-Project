<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>plg_content_jemembed</name>
	<creationDate>February 2025</creationDate>
	<author>JEM Community</author>
	<authorEmail>info@joomlaeventmanager.net</authorEmail>
	<authorUrl>www.joomlaeventmanager.net</authorUrl>
	<copyright>copyright (C) 2013-2025 joomlaeventmanager.net</copyright>
	<license>https://www.gnu.org/licenses/gpl-3.0 GNU/GPL</license>
	<version>4.3.2</version>
	<description>plg_content_jemembed_XML_INSTRUCTION</description>

	<files>
		<filename plugin="jemembed">jemembed.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
        <folder>services</folder>
        <folder>media</folder>
	</files>
	<media destination="plg_content_jemembed" folder="media">
		<folder>css</folder>
	</media>
	<languages>
        <language tag="en-GB">language/en-GB/plg_content_jemembed.ini</language>
        <language tag="en-GB">language/en-GB/plg_content_jemembed.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="type" type="list"
					size="1"
					default="unfinished"
				    label="plg_content_jemembed_TYPE_LABEL"
					description="plg_content_jemembed_TYPE_DESCRIPTION"
				>
					<option value="today"     >plg_content_jemembed_TODAYS_EVENTS</option>
					<option value="unfinished">plg_content_jemembed_UNFINISHED_EVENTS</option>
					<option value="upcoming"  >plg_content_jemembed_UPCOMING_EVENTS</option>
					<option value="archived"  >plg_content_jemembed_ARCHIVED_EVENTS</option>
					<option value="newest"    >plg_content_jemembed_NEWEST_EVENTS</option>
				</field>
				<field name="show_featured" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
				    label="plg_content_jemembed_FEATURED_LABEL"
					description="plg_content_jemembed_FEATURED_DESCRIPTION"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="title" type="list"
					size="1"
					default="link"
				    label="plg_content_jemembed_TITLE_LABEL"
					description="plg_content_jemembed_TITLE_DESCRIPTION"
				>
					<option value="on"  >plg_content_jemembed_ON</option>
					<option value="link">plg_content_jemembed_LINK</option>
					<option value="off" >plg_content_jemembed_OFF</option>
				</field>
				<field name="cut_title" type="text"
					default="40"
					label="plg_content_jemembed_MAX_TITLE_LENGTH"
					description="plg_content_jemembed_MAX_TITLE_LENGTH_DESC"
					showon="title:on[OR]title:link"
				/>
				<field name="show_date" type="list"
					size="1"
					default="on"
					label="plg_content_jemembed_DATE_LABEL"
					description="plg_content_jemembed_DATE_DESCRIPTION"
				>
					<option value="on"  >plg_content_jemembed_ON</option>
					<option value="link">plg_content_jemembed_LINK</option>
					<option value="off" >plg_content_jemembed_OFF</option>
				</field>
				<field name="date_format" type="text"
					default="d.m.Y"
					label="plg_content_jemembed_DATE_FORMAT"
					description="plg_content_jemembed_DATE_FORMAT_DESC"
					showon="show_date:on[OR]show_date:link"
				/>
				<field name="show_time" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="plg_content_jemembed_TIME_LABEL"
					description="plg_content_jemembed_TIME_DESCRIPTION"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="time_format" type="text"
					default=""
					label="plg_content_jemembed_TIME_FORMAT"
					description="plg_content_jemembed_TIME_FORMAT_DESC"
					showon="show_time:1"
				/>
				<field name="show_enddatetime" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="plg_content_jemembed_ENDDATETIME_LABEL"
					description="plg_content_jemembed_ENDDATETIME_DESCRIPTION"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="catids" type="text"
					size="10"
					default=""
					label="plg_content_jemembed_CATEGORIES_LABEL"
					description="plg_content_jemembed_CATEGORIES_DESCRIPTION"
				/>
				<field name="show_category" type="list"
					size="1"
					default="link"
					label="plg_content_jemembed_CATEGORY_LABEL"
					description="plg_content_jemembed_CATEGORY_DESCRIPTION"
				>
					<option value="on"  >plg_content_jemembed_ON</option>
					<option value="link">plg_content_jemembed_LINK</option>
					<option value="off" >plg_content_jemembed_OFF</option>
				</field>
				<field name="venueids" type="text"
					size="10"
					default=""
					label="plg_content_jemembed_VENUES_LABEL"
					description="plg_content_jemembed_VENUES_DESCRIPTION"
				/>
				<field name="show_venue" type="list"
					size="1"
					default="link"
					label="plg_content_jemembed_VENUE_LABEL"
					description="plg_content_jemembed_VENUE_DESCRIPTION"
				>
					<option value="on"  >plg_content_jemembed_ON</option>
					<option value="link">plg_content_jemembed_LINK</option>
					<option value="off" >plg_content_jemembed_OFF</option>
				</field>
				<field name="max_events" type="text"
					size="10"
					default="10"
					label="plg_content_jemembed_MAXIMUM_LABEL"
					description="plg_content_jemembed_MAXIMUM_DESCRIPTION"
				/>
				<field name="no_events_msg" type="text"
					size="70"
					default=""
					label="plg_content_jemembed_NO_EVENTS_MESSAGE_LABEL"
					description="plg_content_jemembed_NO_EVENTS_MESSAGE_DESCRIPTION"
				/>
				<field name="api_security_token" type="text" 
					label="API Security Token" 
					description="Enter a secure random token to prevent unauthorized access"
					hint="z.B. zufälliger_langer_schlüssel_12345"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
